{
  "name": "bmsjs-core",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run connect ",
    "connect": "node server.js",
    "watch": "npm run watch:js",
    "build": "npm run build:js",
    "watch:js": "watchify --extension=js -o dist/main.js src/index.js",
    "build:js": "browserify --extension=js -o dist/main.js src/index.js",
    "test": "karma start"
  },
  "dependencies": {
    "lodash": "~3.9.3"
  },
  "devDependencies": {
    "babelify": "~6.3.0",
    "browserify": "~9.0.8",
    "connect": "~3.4.0",
    "serve-static": "~1.10.0",
    "watchify": "~3.4.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
