{
  "name": "bmsjs-core",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run connect ",
    "connect": "node server.js",
    "watch": "npm run watch:js",
    "concat": "concat-cli -f lib/*.js -o dist/main.js",
    "build": "npm run build:js && npm run concat",
    "watch:js": "watchify --extension=js -o lib/main.js src/index.js",
    "build:js": "browserify --extension=js -o lib/main.js src/index.js",
    "test": "karma start"
  },
  "dependencies": {
    "lodash": "~3.9.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "~9.0.8",
    "concat-cli": "^4.0.0",
    "connect": "~3.4.0",
    "serve-static": "~1.10.0",
    "watchify": "~3.4.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "react"
          ]
        }
      ]
    ]
  }
}
